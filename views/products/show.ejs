<% layout("/layouts/boilerplate") -%>

<body>
    <div class="breadcrumb">
        <a href="/products">Home</a> &gt; <a href="/products">Products</a> &gt; Product Details
    </div>

    <main>
        <section class="product-details-container">
            <div class="product-image">
                <img src="<%= product.image_url %>" alt="<%= product.name %>">
            </div>
            <div class="product-info">
                <h1><%= product.name %></h1>
                <p class="price">$<%= product.price %></p>
                <p class="stock"><%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %></p>
                <p class="description"><%= product.description %></p>
                <div class="btn-container">
                    <button class="btn-primary btn-add-to-cart">Add to Cart</button>
                    <button class="btn-secondary">Buy Now</button>
                </div>
            </div>
        </section>

        <section class="reviews-section">
            <h2>Customer Reviews</h2>
            <p>No reviews yet. Be the first to review this product!</p>
        </section>

        <section class="similar-products">
            <h2>Similar Products</h2>
            <p>Coming soon...</p>
        </section>
    </main>

</body>
