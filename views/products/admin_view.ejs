<% layout("/layouts/admin_boiler") -%>
<body>
    <!-- Product Details Section -->
    <section class="product-details-container">
        <div class="product-image">
            <img src="<%= product.image_url %>" alt="<%= product.name %>">
        </div>
        <div class="product-info">
            <h1><%= product.name %></h1>
            <p class="price">$<%= product.price %></p>
            <p class="stock"><%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %></p>
            <p class="description"><%= product.description %></p>
            <div class="btn-container">
                <button class="btn-primary" onclick="window.location.href='/adminDashboard/<%= product._id %>/update'">Edit Product</button>

                <form action="/adminDashboard/<%= product._id %>?_method=DELETE" method="POST">
                    <button class="btn-secondary" onclick="if (confirm('Are you sure you want to delete this product?')) window.location">Delete Product</button>
                </form>
            </div>
        </div>
    </section>

</body>
