<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShopEasy</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f3f4f6;
            color: #333;
        }

        h1, h2, h3, p {
            margin: 0;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background: #333;
            color: #fff;
        }

        .navbar a {
            color: #fff;
            text-decoration: none;
            margin-left: 1rem;
            font-weight: bold;
        }

        .navbar a:hover {
            color: #fbb034;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(135deg, #007bff, #00c6ff);
            color: #fff;
            text-align: center;
            padding: 3rem 2rem;
        }

        .hero-content h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: #fbb034;
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
        }

        .btn-primary:hover {
            background: #ff9900;
        }

        /* Product Listing */
        .product-listing {
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .product-listing h2 {
            text-align: center;
            margin-bottom: 2rem;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        /* Product Card */
        .product-card {
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .product-card img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
        }

        .product-card h3 {
            font-size: 1.2rem;
            margin: 1rem 0;
        }

        .product-card p {
            font-size: 1.1rem;
            color: #007bff;
            margin-bottom: 1rem;
        }

        .btn-add-to-cart {
            background: #28a745;
            color: #fff;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

        .btn-add-to-cart:hover {
            background: #218838;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 1rem;
            background: #333;
            color: #fff;
            font-size: 0.9rem;
        }
    </style>
    <header class="navbar">
        <h1 class="logo">ShopEasy</h1>
        <nav>
            <a href="#">Home</a>
            <a href="#">Products</a>
            <a href="#" id="cart-link">Cart (0)</a>
        </nav>
    </header>

    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to ShopEasy</h1>
            <p>Your one-stop destination for amazing products and deals.</p>
            <a href="#products" class="btn-primary">Shop Now</a>
        </div>
    </section>

    <main id="products" class="product-listing">
        <h2>Featured Products</h2>
        <div class="product-grid">
            <div class="product-card">
                <img src="https://via.placeholder.com/300x200?text=Sneakers" alt="Stylish Sneakers">
                <h3>Stylish Sneakers</h3>
                <p>$49.99</p>
                <button class="btn-add-to-cart">Add to Cart</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/300x200?text=Watch" alt="Elegant Watch">
                <h3>Elegant Watch</h3>
                <p>$99.99</p>
                <button class="btn-add-to-cart">Add to Cart</button>
            </div>
            <div class="product-card">
                <img src="https://via.placeholder.com/300x200?text=T-Shirt" alt="Casual T-Shirt">
                <h3>Casual T-Shirt</h3>
                <p>$19.99</p>
                <button class="btn-add-to-cart">Add to Cart</button>
            </div>
        </div>
    </main>

    <footer>
        <p>© 2024 ShopEasy. Crafted with ❤️.</p>
    </footer>

    <script>
        let cartCount = 0;

        document.querySelectorAll('.btn-add-to-cart').forEach(button => {
            button.addEventListener('click', () => {
                cartCount++;
                document.getElementById('cart-link').textContent = `Cart (${cartCount})`;
                alert('Item added to cart!');
            });
        });
    </script>
</body>

</html>
